{% extends '@molecules/field/field.html.twig' %}

  {% block label_hidden %}

  {%
    set tags_classes = [
      'tags',
    ]
  %}

<div{{ attributes.addClass(tags_classes) }}>

    {% for item in items %}
      <div class="field-item tag">{{ item.content|set_attribute('class', 'tag-item') }}</div>
    {% endfor %}

  </div>

{% endblock label_hidden %}

